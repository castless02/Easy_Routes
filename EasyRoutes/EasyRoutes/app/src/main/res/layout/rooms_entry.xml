<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/camera_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="camera_name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/camera_image"
        app:layout_constraintTop_toBottomOf="@+id/camera_image" />

    <TextView
        android:id="@+id/personenumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera per: x Persone"
        app:layout_constraintStart_toStartOf="@+id/camera_name"
        app:layout_constraintTop_toBottomOf="@+id/camera_name" />

    <ImageView
        android:id="@+id/camera_image"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>