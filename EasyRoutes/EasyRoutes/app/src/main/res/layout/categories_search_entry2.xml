<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sfondocategorie"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:srcCompat="@drawable/provacategoria1" />

    <TextView
        android:id="@+id/categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins"
        android:text="Nome Categoria"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sfondocategorie"
        app:layout_constraintStart_toStartOf="@+id/sfondocategorie"
        app:layout_constraintTop_toTopOf="@+id/sfondocategorie" />

</androidx.constraintlayout.widget.ConstraintLayout>